@model NguyenDinhMinhNhat_Buoi4.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="delete-container">
    <h1>Xác nhận xóa danh mục</h1>

    <div class="warning-message">
        <p>Bạn có chắc chắn muốn xóa danh mục này?</p>
        @if (Model.Products?.Any() == true)
        {
            <div class="alert alert-warning">
                <strong>Cảnh báo:</strong> Danh mục này đang có @Model.Products.Count sản phẩm.
                Việc xóa danh mục có thể ảnh hưởng đến các sản phẩm này.
            </div>
        }
    </div>

    <div class="category-details">
        <div class="detail-item">
            <label>Tên danh mục:</label>
            <span>@Model.Name</span>
        </div>
        <div class="detail-item">
            <label>Số lượng sản phẩm:</label>
            <span>@(Model.Products?.Count ?? 0)</span>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-actions">
            <button type="submit" class="button delete-btn">Xác nhận xóa</button>
            <a asp-action="Index" class="button cancel-btn">Quay lại</a>
        </div>
    </form>
</div>

<style>
    .delete-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .warning-message {
        margin: 20px 0;
        text-align: center;
    }

    .alert {
        padding: 15px;
        margin: 10px 0;
        border-radius: 5px;
    }

    .alert-warning {
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
    }

    .category-details {
        margin: 20px 0;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 5px;
    }

    .detail-item {
        margin: 10px 0;
        display: flex;
        align-items: center;
    }

    .detail-item label {
        font-weight: bold;
        margin-right: 10px;
        min-width: 150px;
    }

    .form-actions {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 20px;
    }

    .button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none;
        font-size: 16px;
    }

    .delete-btn {
        background: #e74c3c;
        color: white;
    }

    .cancel-btn {
        background: #95a5a6;
        color: white;
    }
</style> 