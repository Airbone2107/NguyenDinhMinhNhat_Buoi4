@model IEnumerable<NguyenDinhMinhNhat_Buoi4.Models.Product>

@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="home-banner">
    <div class="banner-content">
        <h1>Chào mừng đến với Shop Online</h1>
        <p>Khám phá các sản phẩm chất lượng cao với giá cả hợp lý</p>
        <div class="banner-buttons">
            <a asp-controller="Product" asp-action="Index" class="banner-btn primary">
                <i class="fas fa-shopping-bag"></i> Xem tất cả sản phẩm
            </a>
            <a href="#" class="banner-btn secondary">
                <i class="fas fa-info-circle"></i> Về chúng tôi
            </a>
        </div>
    </div>
</div>

<div class="featured-categories">
    <h2>Danh mục sản phẩm</h2>
    
    <div class="category-list">
        <div class="category-item">
            <div class="category-image">
                <i class="fas fa-laptop"></i>
            </div>
            <h3>Điện tử</h3>
            <p>Sản phẩm công nghệ mới nhất</p>
            <a href="#" class="category-link">Xem ngay</a>
        </div>
        
        <div class="category-item">
            <div class="category-image">
                <i class="fas fa-tshirt"></i>
            </div>
            <h3>Thời trang</h3>
            <p>Phong cách & thời thượng</p>
            <a href="#" class="category-link">Xem ngay</a>
        </div>
        
        <div class="category-item">
            <div class="category-image">
                <i class="fas fa-home"></i>
            </div>
            <h3>Nội thất</h3>
            <p>Trang trí không gian sống</p>
            <a href="#" class="category-link">Xem ngay</a>
        </div>
        
        <div class="category-item">
            <div class="category-image">
                <i class="fas fa-utensils"></i>
            </div>
            <h3>Nhà bếp</h3>
            <p>Dụng cụ & thiết bị hiện đại</p>
            <a href="#" class="category-link">Xem ngay</a>
        </div>
    </div>
</div>

<style>
    .home-banner {
        background-image: linear-gradient(135deg, rgba(52, 152, 219, 0.8), rgba(46, 204, 113, 0.8)), url('/images/banner.jpg');
        background-color: #3498db;
        background-size: cover;
        background-position: center;
        text-align: center;
        padding: 100px 20px;
        margin-bottom: 60px;
        border-radius: 15px;
        color: white;
        position: relative;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    .banner-content {
        max-width: 800px;
        margin: 0 auto;
    }
    
    .home-banner h1 {
        font-size: 3em;
        margin-bottom: 20px;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        animation: fadeIn 1s ease-out;
    }
    
    .home-banner p {
        font-size: 1.4em;
        margin-bottom: 40px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        line-height: 1.6;
        animation: fadeIn 1.5s ease-out;
    }
    
    .banner-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        animation: fadeIn 2s ease-out;
    }
    
    .banner-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 15px 30px;
        border-radius: 50px;
        font-size: 1.1em;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    .banner-btn.primary {
        background-color: #2ecc71;
        color: white;
    }
    
    .banner-btn.primary:hover {
        background-color: #27ae60;
        transform: translateY(-3px);
        box-shadow: 0 6px 10px rgba(0,0,0,0.15);
        color: white;
    }
    
    .banner-btn.secondary {
        background-color: transparent;
        color: white;
        border: 2px solid white;
    }
    
    .banner-btn.secondary:hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-3px);
        box-shadow: 0 6px 10px rgba(0,0,0,0.15);
        color: white;
    }
    
    .featured-categories {
        padding: 20px;
        margin-bottom: 60px;
    }
    
    .featured-categories h2 {
        text-align: center;
        margin-bottom: 40px;
        color: #2c3e50;
        position: relative;
        font-size: 2.2em;
        font-weight: 700;
    }
    
    .featured-categories h2::after {
        content: '';
        display: block;
        width: 80px;
        height: 4px;
        background: linear-gradient(to right, #3498db, #2ecc71);
        position: absolute;
        bottom: -15px;
        left: 50%;
        transform: translateX(-50%);
        border-radius: 2px;
    }
    
    .category-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 30px;
        padding: 20px 0;
    }
    
    .category-item {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s, box-shadow 0.3s;
        padding: 30px 20px;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .category-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }
    
    .category-image {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #3498db, #2ecc71);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        color: white;
        font-size: 32px;
    }
    
    .category-item h3 {
        font-size: 1.4em;
        margin-bottom: 10px;
        color: #2c3e50;
    }
    
    .category-item p {
        color: #7f8c8d;
        margin-bottom: 20px;
        line-height: 1.5;
    }
    
    .category-link {
        color: #3498db;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s;
        display: inline-block;
        position: relative;
    }
    
    .category-link::after {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #3498db;
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.3s ease;
    }
    
    .category-link:hover {
        color: #2980b9;
    }
    
    .category-link:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }
    
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@media (max-width: 768px) {
        .home-banner {
            padding: 60px 20px;
        }
        
        .home-banner h1 {
            font-size: 2.2em;
        }
        
        .home-banner p {
            font-size: 1.1em;
        }
        
        .banner-buttons {
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }
        
        .banner-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style> 