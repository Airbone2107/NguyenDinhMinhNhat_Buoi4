@model NguyenDinhMinhNhat_Buoi4.Models.Product
@{
	ViewData["Title"] = Model.Name;
	string FormatCurrency(decimal price) => string.Format("{0:N0}đ", price);
}

<div class="product-detail-container">
	<div class="product-breadcrumb">
		<a asp-controller="Home" asp-action="Index">Trang chủ</a>
		<span class="separator"><i class="fas fa-chevron-right"></i></span>
		<a asp-controller="Product" asp-action="Index">Sản phẩm</a>
		<span class="separator"><i class="fas fa-chevron-right"></i></span>
		<span class="current">@Model.Name</span>
	</div>

	<div class="product-detail-content">
		<div class="product-detail-left">
			<div class="product-image-gallery">
				<div class="product-main-image">
					@if (!string.IsNullOrEmpty(Model.ImageUrl))
					{
						<img src="@Model.ImageUrl" alt="@Model.Name" id="mainImage" />
					}
					else
					{
						<div class="no-image">
							<i class="fas fa-image"></i>
							<span>Không có hình ảnh</span>
						</div>
					}
				</div>
			</div>
		</div>

		<div class="product-detail-right">
			<h1 class="product-title">@Model.Name</h1>
			
			<div class="product-info">
				<div class="info-item">
					<span class="info-label">Mã sản phẩm:</span>
					<span class="info-value">@Model.Id</span>
				</div>
				
				@if (Model.Category != null)
				{
					<div class="info-item">
						<span class="info-label">Danh mục:</span>
						<span class="info-value category-name">@Model.Category.Name</span>
					</div>
				}
			</div>

			<div class="product-price">
				<span class="price-label">Giá bán:</span>
				<span class="price-amount">@FormatCurrency(Model.Price)</span>
			</div>

			<div class="product-description">
				<h3>Mô tả sản phẩm</h3>
				<p>@Html.Raw(Model.Description)</p>
			</div>

			<div class="product-actions">
				<form class="add-to-cart-form" asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
					<input type="hidden" name="productId" value="@Model.Id" />
					
					<div class="quantity-selector">
						<label for="quantity">Số lượng:</label>
						<div class="quantity-buttons">
							<button type="button" class="quantity-decrease" onclick="decreaseQuantity()">
								<i class="fas fa-minus"></i>
							</button>
							<input type="number" id="quantity" name="quantity" min="1" value="1" readonly />
							<button type="button" class="quantity-increase" onclick="increaseQuantity()">
								<i class="fas fa-plus"></i>
							</button>
						</div>
					</div>
					
					<div class="action-buttons">
						<button type="submit" class="btn-add-to-cart">
							<i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
						</button>
						<button type="button" onclick="buyNow()" class="btn-buy-now">
							<i class="fas fa-bolt"></i> Mua ngay
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<style>
	.product-detail-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 20px;
	}
	
	.product-breadcrumb {
		display: flex;
		align-items: center;
		margin-bottom: 30px;
		font-size: 14px;
	}
	
	.product-breadcrumb a {
		color: #3498db;
		text-decoration: none;
	}
	
	.product-breadcrumb .separator {
		margin: 0 10px;
		color: #7f8c8d;
		font-size: 12px;
	}
	
	.product-breadcrumb .current {
		color: #7f8c8d;
		font-weight: 500;
	}
	
	.product-detail-content {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 40px;
	}
	
	.product-main-image {
		width: 100%;
		height: 400px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		background-color: white;
		border-radius: 10px;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
	}
	
	.product-main-image img {
		max-width: 100%;
		max-height: 100%;
		object-fit: contain;
		transition: transform 0.3s ease;
	}
	
	.product-main-image:hover img {
		transform: scale(1.05);
	}
	
	.no-image {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		color: #95a5a6;
	}
	
	.no-image i {
		font-size: 50px;
		margin-bottom: 10px;
	}
	
	.product-title {
		font-size: 28px;
		margin: 0 0 20px 0;
		color: #2c3e50;
	}
	
	.product-info {
		margin-bottom: 20px;
	}
	
	.info-item {
		margin-bottom: 10px;
	}
	
	.info-label {
		font-weight: 500;
		color: #7f8c8d;
		margin-right: 5px;
	}
	
	.info-value {
		color: #2c3e50;
	}
	
	.category-name {
		color: #3498db;
		font-weight: 600;
	}
	
	.product-price {
		margin-bottom: 20px;
		background-color: #f8f9fa;
		padding: 15px;
		border-radius: 5px;
	}
	
	.price-label {
		font-weight: 500;
		color: #7f8c8d;
	}
	
	.price-amount {
		font-size: 24px;
		font-weight: 700;
		color: #e74c3c;
		margin-left: 10px;
	}
	
	.product-description {
		margin-bottom: 30px;
	}
	
	.product-description h3 {
		font-size: 18px;
		margin-bottom: 15px;
		color: #2c3e50;
		border-bottom: 1px solid #ecf0f1;
		padding-bottom: 10px;
	}
	
	.product-description p {
		line-height: 1.6;
		color: #34495e;
	}
	
	.product-actions {
		margin-top: 20px;
	}
	
	.quantity-selector {
		display: flex;
		align-items: center;
		margin-bottom: 20px;
	}
	
	.quantity-selector label {
		font-weight: 500;
		margin-right: 15px;
	}
	
	.quantity-buttons {
		display: flex;
		align-items: center;
		border: 1px solid #ddd;
		border-radius: 4px;
		overflow: hidden;
	}
	
	.quantity-decrease,
	.quantity-increase {
		background: #f8f9fa;
		border: none;
		width: 40px;
		height: 40px;
		cursor: pointer;
		font-size: 16px;
	}
	
	.quantity-decrease:hover,
	.quantity-increase:hover {
		background: #e9ecef;
	}
	
	#quantity {
		width: 60px;
		height: 40px;
		text-align: center;
		border: none;
		border-left: 1px solid #ddd;
		border-right: 1px solid #ddd;
	}
	
	.action-buttons {
		display: flex;
		gap: 15px;
	}
	
	.btn-add-to-cart,
	.btn-buy-now {
		flex: 1;
		padding: 15px 0;
		border: none;
		border-radius: 5px;
		font-size: 16px;
		font-weight: 600;
		cursor: pointer;
		transition: all 0.3s;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
	}
	
	.btn-add-to-cart {
		background-color: #3498db;
		color: white;
	}
	
	.btn-add-to-cart:hover {
		background-color: #2980b9;
	}
	
	.btn-buy-now {
		background-color: #e74c3c;
		color: white;
	}
	
	.btn-buy-now:hover {
		background-color: #c0392b;
	}
	
	@@media (max-width: 768px) {
		.product-detail-content {
			grid-template-columns: 1fr;
		}
		
		.product-main-image {
			height: 300px;
		}
		
		.action-buttons {
			flex-direction: column;
		}
	}
</style>

<script>
	function increaseQuantity() {
		var quantityInput = document.getElementById('quantity');
		quantityInput.value = parseInt(quantityInput.value) + 1;
	}
	
	function decreaseQuantity() {
		var quantityInput = document.getElementById('quantity');
		var currentValue = parseInt(quantityInput.value);
		if (currentValue > 1) {
			quantityInput.value = currentValue - 1;
		}
	}
	
	function buyNow() {
		var form = document.querySelector('.add-to-cart-form');
		var formData = new FormData(form);
		
		// Thêm tham số redirect=checkout để biết rằng cần chuyển hướng đến trang thanh toán
		fetch('/ShoppingCart/AddToCart?redirect=checkout', {
			method: 'POST',
			body: formData
		})
		.then(response => {
			if(response.ok) {
				window.location.href = '/ShoppingCart/Checkout';
			}
		})
		.catch(error => {
			console.error('Có lỗi xảy ra:', error);
		});
	}
</script>