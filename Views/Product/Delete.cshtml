@model NguyenDinhMinhNhat_Buoi4.Models.Product
@{
	ViewData["Title"] = "Xóa sản phẩm";
}

<main>
	<div class="delete-container">
		<h1>Xác nhận xóa sản phẩm</h1>

		<div class="product-info">
			<div class="info-item">
				<label>ID:</label>
				<span>@Model.Id</span>
			</div>
			<div class="info-item">
				<label>Tên sản phẩm:</label>
				<span>@Model.Name</span>
			</div>
			<div class="info-item">
				<label>Giá bán:</label>
				<span>@string.Format("{0:N0}đ", Model.Price)</span>
			</div>
			<div class="info-item">
				<label>Mô tả:</label>
				<p>@Model.Description</p>
			</div>
		</div>

		<form asp-action="DeleteConfirmed" method="post">
			<input type="hidden" asp-for="Id" />
			<div class="button-group">
				<button type="submit" class="button delete-btn">Xác nhận xóa</button>
				<a asp-action="List" class="button cancel-btn">Hủy bỏ</a>
			</div>
		</form>
	</div>
</main>

<style>
	.delete-container {
		max-width: 1200px;
		margin: 20px auto;
		padding: 20px;
		background: white;
		border-radius: 15px;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	}

	.product-info {
		margin: 20px 0;
		padding: 15px;
		border: 1px solid #eee;
		border-radius: 10px;
	}

	.info-item {
		margin: 10px 0;
		padding: 10px;
		background: #f8f9fa;
		border-radius: 8px;
	}

	.info-item label {
		font-weight: bold;
		color: #333;
		margin-right: 10px;
	}

	.button-group {
		display: flex;
		gap: 15px;
		margin-top: 20px;
	}

	.delete-btn {
		background: #f44336;
		color: white;
		padding: 10px 20px;
	}

	.cancel-btn {
		background: #6c757d;
		color: white;
		padding: 10px 20px;
	}
</style>