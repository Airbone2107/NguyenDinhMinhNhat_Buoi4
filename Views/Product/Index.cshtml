@model IEnumerable<NguyenDinhMinhNhat_Buoi4.Models.Product>

@{
	ViewData["Title"] = "Web bán hàng";
	string FormatCurrency(decimal price) => string.Format("{0:N0}đ", price);
}

<main>
	<!-- Danh sách sản phẩm -->
	<div class="product-list">
		@foreach (var product in Model)
		{
			<div class="product-card">
				<a asp-action="Display" asp-route-id="@product.Id" class="product-link">
					<div class="product-image-wrapper">
						<img src="@product.ImageUrl" alt="@product.Name">
					</div>
					<h2>@product.Name</h2>
					<p>@product.Description</p>
					<span class="price">@FormatCurrency(product.Price)</span>
				</a>
				<button class="button button4">Mua Ngay</button>
			</div>
		}
	</div>
</main>

<style>
	.admin-actions {
		display: flex;
		justify-content: center;
		gap: 20px;
		margin: 20px 0;
	}
	.admin-actions .button {
		display: inline-block;
		padding: 10px 20px;
	}
</style>
