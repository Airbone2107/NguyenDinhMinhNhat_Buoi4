@page
@model NguyenDinhMinhNhat_Buoi4.Areas.Identity.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Truy cập bị từ chối";
}

<div class="access-denied-container">
    <div class="access-denied-card">
        <div class="icon-container">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h2>@ViewData["Title"]</h2>
        <p>Bạn không có quyền truy cập vào trang này.</p>
        <div class="action-buttons">
            <a href="/" class="btn-home">
                <i class="fas fa-home"></i> Về trang chủ
            </a>
            <a href="javascript:history.back()" class="btn-back">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>

<style>
    .access-denied-container {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px 20px;
        min-height: 50vh;
    }
    
    .access-denied-card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        padding: 40px;
        text-align: center;
        max-width: 600px;
        width: 100%;
    }
    
    .icon-container {
        margin-bottom: 20px;
    }
    
    .icon-container i {
        font-size: 60px;
        color: #e74c3c;
        animation: pulse 2s infinite;
    }
    
    .access-denied-card h2 {
        color: #2c3e50;
        font-size: 1.8rem;
        margin-bottom: 15px;
        font-weight: 700;
    }
    
    .access-denied-card p {
        color: #7f8c8d;
        font-size: 1.1rem;
        margin-bottom: 30px;
        line-height: 1.6;
    }
    
    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
    }
    
    .btn-home, .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 25px;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s;
    }
    
    .btn-home {
        background: linear-gradient(to right, #3498db, #2980b9);
        color: white;
    }
    
    .btn-home:hover {
        background: linear-gradient(to right, #2980b9, #3498db);
        transform: translateY(-3px);
        box-shadow: 0 4px 10px rgba(52, 152, 219, 0.3);
        color: white;
    }
    
    .btn-back {
        background-color: white;
        color: #3498db;
        border: 2px solid #3498db;
    }
    
    .btn-back:hover {
        background-color: #f7f9fa;
        transform: translateY(-3px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        color: #2980b9;
    }
    
    @@keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.1);
            opacity: 0.8;
        }
        100% {
            transform: scale(1);
            opacity: 1;
        }
    }
    
    @@media (max-width: 576px) {
        .action-buttons {
            flex-direction: column;
        }
        
        .btn-home, .btn-back {
            width: 100%;
            justify-content: center;
        }
    }
</style> 